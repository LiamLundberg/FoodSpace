@model Profile


<div class="recipe-body-image"></div>

<div class="container">
    <div class="container-menu">
        <form method="post" asp-action="AddProfileInitial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="ProfileName" class=""></label>
                <input asp-for="ProfileName" class="form-control" />
                <span asp-validation-for="ProfileName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" >
                <label class="">Preferences:</label>
                <div style="display:grid; grid-template-columns: 20% 20%">
                    <div class="form-check">


                        @*
                        <label class="">Vegan</label>
                        <label class="switch">
                        <input type="checkbox" type="checkbox" asp-for="Prefernce_Vegan">
                        <span class="slider round"></span>
                        </label>
                        <div class="form-check">
                        </div>
                        *@

                        <input class="form-check-input" type="checkbox" asp-for="Prefernce_Vegan" />
                        <label class="">Vegan</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Prefernce_Vegetarian" />
                        <label class="">Vegetarian</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Prefernce_GlutenFree" />
                        <label class="">Gluten-Free</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Prefernce_NutFree" />
                        <label class="">Nut-Free</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Prefernce_LactoseFree" />
                        <label class="">Lactose-Free</label>
                    </div>
                </div>
                
            </div>
            <div class="form-group mb-3">
                <label asp-for="MaxCalories" class="">Maximum Calories</label>
                <input asp-for="MaxCalories" class="form-control" />
                <span asp-validation-for="MaxCalories" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MinProtein" class="">Minimum Protein</label>
                <input asp-for="MinProtein" class="form-control" />
                <span asp-validation-for="MinProtein" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MaxFat" class="">Maximum Fat</label>
                <input asp-for="MaxFat" class="form-control" />
                <span asp-validation-for="MaxFat" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MinCarbohydrates" class="">Minimum Carbohydrates</label>
                <input asp-for="MinCarbohydrates" class="form-control" />
                <span asp-validation-for="MinCarbohydrates" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back</a>
            </div>
        </form>

    </div>

</div>
