<!DOCTYPE html>

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodSpace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootSwatchTheme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodSpace.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"/> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

</head>

    <header style="position:relative;">
       

        <nav class="navbar navbar-expand-lg navbar-toggleable-sm" h style="position:absolute; z-index:1;">
            <div style="width:30vw; height:100%;">

            </div>
            <div class="container-fluid" style="position:absolute; display:flex; justify-content:start;">
                 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1" style="display:flex; justify-content:center;">
                        <li class="nav-item">
                            <a class="navbar-text" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar-text" asp-area="" asp-controller="Item" asp-action="Index">ITEMS</a>
                        </li>
                        <li class="nav-item recipe-button">
                            <a class="navbar-text" asp-area="" asp-controller="Recipe" asp-action="Index">RECIPES</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Recipe" asp-action="Create">Create</a>
                            </div>
                          </li>
                    </ul>
                </div>
            </div>
                <div style="justify-content:end; display:flex; align-content:center; position:absolute; right:0; padding:1%; width:20%;">

                            <partial name="_LoginPartial"/>
                </div>
        </nav>
    </header>
    

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)

</html>
