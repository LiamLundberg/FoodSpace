@model Step

<div class="row">
    <div class="col-md-4">
        <h1>@Model.Recipe.Name</h1>
        <h2>Add Step To Method</h2>
        @*<div asp-validation-summary="All"></div>*@
        
        <form method="post" asp-action="AddStep">
            <input type="hidden" asp-for="RecipeId" value="@Model.RecipeId" />
            <input type="hidden" asp-for="StepId" />
            <input type="hidden" asp-for="Title" value="Default" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="StepNumber" class="control-label"></label>
                <input asp-for="StepNumber" class="form-control" />
                <span asp-validation-for="StepNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="min-height:200px;">
                <label asp-for="Description" class="control-label"></label>
                <textarea name="Description" class="form-control" style="height:200px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <Button type="submit" class="btn btn-primary" style="width:150px">Add Step</Button>
                <a asp-controller="Recipe" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
                <Button type="submit" asp-action="DeleteStep" class="btn btn-danger mt-1" style="width:150px">Delete</Button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}